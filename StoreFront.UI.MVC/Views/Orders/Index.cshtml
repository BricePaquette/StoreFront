@model IEnumerable<StoreFront.DATA.EF.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

@section breadcrumbs{
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>@ViewData["Title"]</h2>

                    </div>
                </div>
            </div>
        </div>
    </section>
}

    @*<p>
    <a asp-action="Create">Create New</a>
</p>*@
    <div class="container mt-3">
        <table class="table" id="tableView">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ShipToName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipState)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipZip)
                    </th>
                    

                @if (User.IsInRole("Admin"))
                {

                    <th></th>
                }
                
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderId">@Html.DisplayFor(modelItem => item.OrderDate)</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ShipToName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipState)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipZip)
                    </td>
                   
                    <td>
                        @if (User.IsInRole("Admin"))
                        {

                            <a asp-action="Edit" asp-route-id="@item.OrderId">Edit | </a>
                        }
                        
                        @if (User.IsInRole("Admin"))
                        {

                            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#tableView').DataTable();
        });
    </script>
}
