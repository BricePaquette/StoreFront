        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                <form asp-action="Contact" class="form-contact contact_form" id="contactForm">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">

                                <textarea asp-for="Message" class="form-control w-100" id="message" cols="30" rows="9"
                                          placeholder='Enter Message'></textarea>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="Name" class="form-control" id="name" type="text"
                                       placeholder='Enter your name'>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" id="email" type="email" placeholder='Enter email address'>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input asp-for="Subject" class="form-control" id="subject" type="text" placeholder='Enter Subject'>
                                <span asp-validation-for="Subject" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn_3">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
