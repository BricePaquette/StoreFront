@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section breadcrumbs{
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
            </div>

        </div>
    </section>
}

    <div class="row">
        <div class="offset-lg-4 col-lg-4 offset-md-4 col-md-4 offset-sm-1 col-sm-10 mt-3">
            
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                            <input class="align-content-center" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn_1">Log in</button>
                    </div>
                    
                </form>
            
        </div>
        <div class="offset-lg-4 col-lg-4 offset-md-4 col-md-4 col-sm-12">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            </div>
        <div class="col-lg-4 offset-md-4 col-md-4 col-sm-12">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>

        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
